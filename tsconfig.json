{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "ES2017"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
